{
  "name": "1cc-portal",
  "version": "1.0.0",
  "private": true,
  "description": "Multi-tenant CMS built on Cloudflare Workers",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage",
    "test:e2e": "turbo run test:e2e --filter=@1cc/web",
    "dev:worker": "turbo run dev --filter=@1cc/worker",
    "dev:web": "turbo run dev --filter=@1cc/web",
    "deploy:worker": "turbo run deploy --filter=@1cc/worker",
    "deploy:staging": "npm run build && cd apps/worker && wrangler deploy --env staging",
    "deploy:production": "npm run build && npm run test && cd apps/worker && wrangler deploy --env production"
  },
  "devDependencies": {
    "turbo": "^2.0.0",
    "typescript": "^5.4.0"
  },
  "packageManager": "npm@10.2.0",
  "engines": {
    "node": ">=20.0.0"
  }
}
