{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"]
    },
    "test:coverage": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"]
    },
    "test:e2e": {
      "dependsOn": ["build"],
      "outputs": ["playwright-report/**", "test-results/**"],
      "cache": false
    },
    "test:security": {
      "dependsOn": ["build"],
      "outputs": ["security-test-results/**"],
      "cache": false
    },
    "deploy": {
      "dependsOn": ["build", "test"]
    },
    "deploy:staging": {
      "dependsOn": ["build", "test"]
    },
    "deploy:production": {
      "dependsOn": ["build", "test"]
    }
  }
}
